.container {
    position: relative;
}

.canvas, .layer-2 {
    width: 670rpx;
    height: 846rpx;
    margin: 40rpx auto 0;
    /*background-color: #000;*/
}

.accessory-container {
    width: 670rpx;
    margin: 40rpx auto;
    overflow-x: auto;
}

.accessory-list {
    display: flex;
    justify-content: space-between;
    height: 100rpx;
}

.accessory-list .accessory {
    height: 100rpx;
    width: 100rpx;
    overflow: hidden;
}

.accessory-list .accessory image {
    width: 100rpx;
    height: 100rpx;
    overflow: hidden;
}

.accessory-container::-webkit-scrollbar {
    width: 0;
    height: 0;
}

.bottom-container {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    width: 670rpx;
    margin: auto;
}

.tool-container {
    display: flex;
    justify-content: space-between;
    width: 180rpx;
}

.tool {
    width: 60rpx;
}

.tool .icon {

}

.tool text {
    font-size: 20rpx;
    text-align: center;
    color: #000;
}

.button {
    width: 216rpx;
    height: 98rpx;
}

.layer-2 {
    position: absolute;
    overflow: hidden;
    z-index: 999;
}

.accessory-image {
    width: 100%;
    height: 100%;
}