.container {
    position: relative;
}

.canvas, .layer-2 {
    width: 670rpx;
    height: 846rpx;
    margin: 40rpx auto 0;
}

.accessory-container {
    width: 670rpx;
    margin: 40rpx auto;
    overflow-x: auto;
}

.accessory-list {
    display: flex;
    justify-content: space-between;
    height: 100rpx;
}

.accessory-list .accessory {
    height: 100rpx;
    width: 100rpx;
    overflow: hidden;
}

.accessory-list .accessory image {
    width: 100rpx;
    height: 100rpx;
    overflow: hidden;
}

.accessory-container::-webkit-scrollbar {
    width: 0;
    height: 0;
}

.bottom-container {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    width: 670rpx;
    margin: auto;
}

.tool-container {
    display: flex;
    justify-content: space-between;
    width: 180rpx;
}

.tool {
    text-align: center;
}

.tool i {
    display: block;
    width: 60rpx;
    height: 60rpx;
    background-size: 60rpx 60rpx;
    background-repeat: none;
    background-position: center;
    border: 1px solid #e6e6e6;
    border-radius: 50%;
}

.tool text {
    font-size: 20rpx;
    text-align: center;
    color: #000;
}

.button {
    width: 216rpx;
    height: 98rpx;
}

.layer-2 {
    position: absolute;
    overflow: hidden;
    z-index: 999;
}

.background-image {
    width: 670rpx;
    height: 846rpx;
}

.accessory-image {
    width: 100%;
    height: 100%;
}