<view>
    <canvas class="canvas" id="canvas" canvas-id="canvas"></canvas>
    <view class="image-container">
        <image class="image-container__image" src="{{imgUrl}}"></image>
    </view>
    <view class="copywriting-container">
        <view class="copywriting-container__code" style="background-image: url({{static_base_url}}/app/acode.jpg)"></view>
        <view class="copywriting-container__text">赶紧分享你的个人专属101形象海报吧~</view>
    </view>
    <view class="scan-container">
        <view class="scan-container__scan">扫一扫</view>
    </view>
    <view class="button-container">
        <button class="button-container__btn" style="background-image: url({{static_base_url}}/app/save-btn.png)" bind:tap="saveImage"></button>
        <view class="button-container__btn" style="background-image: url({{static_base_url}}/app/again-btn.png)" bind:tap="playAgain"></view>
    </view>
</view>