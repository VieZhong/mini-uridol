.accessory-sizable {
    height: 100rpx;
    width: 100rpx;
    overflow: visible;
    transform-origin: top left;
    position: relative;
    padding: 10rpx;
    position: absolute;
}

.border-show {
    border: 1px solid #fff;
}

.border-hidden {
    border: 0;
}

.del-icon {
    position: absolute;
    top: -6px;
    left: -6px;
}

.size-icon {
    position: absolute;
    bottom: -6px;
    right: -6px;
    width: 12px;
    height: 12px;
}