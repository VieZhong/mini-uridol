.accessory_sizable {
    height: 100rpx;
    width: 100rpx;
    overflow: visible;
    transform-origin: top left;
    position: relative;
    padding: 10rpx;
    position: absolute;
}

.border_show {
    border: 1px solid #fff;
}

.border_hidden {
    border: 0;
}

.accessory__icon_del {
    position: absolute;
    top: -6px;
    left: -6px;
}

.accessory__icon_size {
    position: absolute;
    bottom: -6px;
    right: -6px;
    width: 12px;
    height: 12px;
}