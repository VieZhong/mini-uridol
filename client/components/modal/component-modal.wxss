 .content__img {
     height: 504rpx;
     width: 600rpx;
 }

 .modal__mask {
     position: fixed;
     top: 0;
     left:0;
     z-index: 888;
     width: 100%;
     height: 100%;
     background-color: rgba(0, 0, 0, 0.5);
 }

 .model__content {
     background-color: white;
     position: fixed;
     top: 200rpx;
     left:0;
     z-index: 999;
     width: 600rpx;
     height: 800rpx;
     border: 1rpx solid #ccc;
     border-radius: 10rpx;
     margin-left: 75rpx;
 }

 .content__text {
     margin: 30rpx 0;
 }

 .text__block {
     display: block;
     margin: 0 auto;
     text-align: center;
 }

 .content__go-it {
     width: 470rpx;
     height: 80rpx;
     display: block;
     margin: 0 auto;
 }

 .modal_show {
     visibility: visible;
 }

 .modal_hide {
     visibility: hidden;
 }

 .modal__animation {
     animation: zoom 0.6s;
     -webkit-animation: zoom 0.6s;
 }

 @-webkit-keyframes zoom {
     from {
         -webkit-transform: scale(0)
     }
     to {
         -webkit-transform: scale(1)
     }
 }

 @keyframes zoom {
     from {
         transform: scale(0)
     }
     to {
         transform: scale(1);
     }
 }