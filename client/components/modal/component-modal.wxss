 page {
     width: 100%;
     height: 100%;
 }

 .modal {
     width: 100%;
     height: 100%;
 }

 .top-img {
     height: 504rpx;
     width: 600rpx;
 }

 .modal-mask {
     position: fixed;
     top: 0;
     z-index: 888;
     width: 100%;
     height: 100%;
     background-color: rgba(0, 0, 0, 0.5);
 }

 .model-content {
     background-color: white;
     position: fixed;
     top: 200rpx;
     z-index: 999;
     width: 600rpx;
     height: 800rpx;
     border: 1rpx solid #ccc;
     border-radius: 10rpx;
     margin-left: 10%;
 }

 .uder-text {
     margin: 30rpx 0;
 }

 .text-block {
     display: block;
     margin: 0 auto;
     text-align: center;
 }

 .button {
     width: 200rpx;
     margin-bottom: 15rpx;
 }

 .goit-img {
     width: 470rpx;
     height: 80rpx;
     display: block;
     margin: 0 auto;
 }

 .show-modal {
     visibility: visible;
 }

 .hideModal {
     visibility: hidden;
 }

 .modal-animation {
     animation: zoom 0.6s;
     -webkit-animation: zoom 0.6s;
 }

 @-webkit-keyframes zoom {
     from {
         -webkit-transform: scale(0)
     }
     to {
         -webkit-transform: scale(1)
     }
 }

 @keyframes zoom {
     from {
         transform: scale(0)
     }
     to {
         transform: scale(1);
     }
 }